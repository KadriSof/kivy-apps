<LoginScreen>:

    MDFloatLayout:
        md_bg_color: self.theme_cls.primary_dark
        size_hint: (0.5, 0.5)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDTextField:
            size_hint: (0.5, 0.2)
            pos_hint: {'center_x': .5, 'center_y': .7}
            hint_text: "Username"
            text_color_focus: 'white'
            icon_left: 'account'

        MDTextField:
            id: password_input
            size_hint: (0.5, 0.2)
            pos_hint: {'center_x': .5, 'center_y': .4}
            hint_text: "Password"
            icon_left: 'lock'
            password: True
            text_color_focus: 'white'

        MDIconButton:
            id: password_icon
            pos_hint: {'center_x': .73, 'center_y': .4}
            icon: 'eye'
            on_release: root.show_password()

        MDRaisedButton:
            size_hint: (.4, .1)
            pos_hint: {"center_x": .5, "center_y": .1}
            text: "Log in"
            # style: "elevated"
